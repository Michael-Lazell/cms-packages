<?xml version="1.0" encoding="UTF-8"?>
<datasources>
  <datasource result-element="menu">
    <methodname>getMenuBranch</methodname>
    <parameters>
      <parameter name="menuItemKey" type="int">${portal.pageKey}</parameter>
      <parameter name="includeTopLevel" type="boolean">true</parameter>
      <parameter name="startLevel" type="int">0</parameter>
      <parameter name="levels" type="int">0</parameter>
    </parameters>
  </datasource>
  <datasource>
    <methodname>getContent</methodname>
    <parameters>
      <parameter name="key" type="int[]">${select(param.key,0)}</parameter>
      <parameter name="query" type="string"></parameter>
      <parameter name="orderby" type="string"></parameter>
      <parameter name="index" type="int">0</parameter>
      <parameter name="count" type="int">1</parameter>
      <parameter name="includeData" type="boolean">true</parameter>
      <parameter name="childrenLevel" type="int">0</parameter>
      <parameter name="parentLevel" type="int">0</parameter>
    </parameters>
  </datasource>
  <datasource>
    <methodname>getPreferences</methodname>
    <parameters>
      <parameter name="scope" type="string">*</parameter>
      <parameter name="wildCardkey" type="string">*</parameter>
    </parameters>
  </datasource>
</datasources>